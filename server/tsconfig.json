{
  "compilerOptions": {
    "lib": [
      "ES2023",
      "DOM"
    ],
    "target": "ES2022",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}